<Page x:Class="VelNew.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VelNew"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="LoginPage" >

    <Grid>
        <Grid Background="Beige">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="1150" Height="216">
                <TextBlock Margin="10"><Run Text="Логин"/></TextBlock>
                <TextBox Margin="5" x:Name="Login" HorizontalAlignment="Stretch" TextChanged="Login_TextChanged"/>
                <TextBlock Margin="5"><Run Text="Пароль"/></TextBlock>
                <PasswordBox Margin="5" x:Name="Password" HorizontalAlignment="Stretch"/>
                <Button Click="EnterCl" Margin="5" HorizontalAlignment="Stretch" Content="Войти"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
